<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

   <!-- <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        style="@style/cardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        card_view:cardUseCompatPadding="true">-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtView_mem_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/crew_text_color"
                android:padding="@dimen/padding"
                android:textSize="@dimen/font_size"
                app:layout_constraintLeft_toLeftOf="@id/img_crdViewMem_dp"
                app:layout_constraintTop_toBottomOf="@id/img_crdViewMem_dp" />

            <TextView
                android:id="@+id/txtView_mem_desg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/crew_text_color"
                android:padding="@dimen/padding"
                android:textSize="@dimen/font_size"
                app:layout_constraintLeft_toLeftOf="@id/txtView_mem_name"
                app:layout_constraintTop_toBottomOf="@id/txtView_mem_name" />


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_crdViewMem_dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="top"
                android:padding="@dimen/padding"
                app:civ_border_width="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

<!--
    </androidx.cardview.widget.CardView>
-->
</LinearLayout>